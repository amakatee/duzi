model Character {
    id        String   @id @default(auto()) @map("_id") @db.ObjectId
    character String
    pianyin   String
    rus       String
    eng       String
    tone      Int
    audio     String?
    visible   Boolean
    level     String

}

model Text {
     id        String   @id @default(auto()) @map("_id") @db.ObjectId
     title     String?
     text      String  


}